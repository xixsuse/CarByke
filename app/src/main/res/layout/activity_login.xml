<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container_login"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="52dp"
        android:background="@color/loginBackgroundColor"
        >

        <!--cancel-->
        <ImageButton
            android:id="@+id/al_cancel_ib"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_cancel"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

        <!--logo-->
        <ImageView
            android:id="@+id/al_logo"
            android:layout_below="@+id/al_cancel_ib"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_black"
            android:layout_marginTop="92dp"
            tools:ignore="ContentDescription" />

        <!--continue with-->
        <TextView
            android:id="@+id/al_text"
            android:layout_below="@+id/al_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_with"
            android:layout_centerHorizontal="true"
            style="@style/CustomTextStyle12"
            android:textColor="#9B9B9B"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            />

        <!--with google-->
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/al_google_fb"
            android:layout_below="@+id/al_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#F34541"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#F34541"
            fancy:fb_focusColor="#F34541"
            fancy:fb_fontIconResource="&#xf0d4;"
            fancy:fb_iconPaddingRight="12dp"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="4dp"
            fancy:fb_text="GOOGLE"
            fancy:fb_textSize="14sp"
            style="@style/CustomTextStyle16"
            app:fb_textColor="@color/white"
            android:layout_marginTop="8dp"
            fancy:fb_fontIconSize="18dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:elevation="5dp"
            tools:targetApi="lollipop" />

        <!--with phone-->
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/al_phone_fb"
            android:layout_below="@+id/al_google_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#3B5998"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#3B5998"
            fancy:fb_focusColor="#3B5998"
            fancy:fb_iconPaddingRight="12dp"
            fancy:fb_fontIconResource="&#xf098;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="4dp"
            fancy:fb_text="PHONE "
            fancy:fb_textSize="14sp"
            style="@style/CustomTextStyle16"
            app:fb_textColor="@color/white"
            fancy:fb_fontIconSize="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:elevation="5dp"
            tools:targetApi="lollipop" />


    </RelativeLayout>


</FrameLayout>